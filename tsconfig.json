{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": false,
    "outDir": "dist",
    "types": ["discord.js", "node"],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@lfg/*": ["src/*"]
    }
  },
  "filesGlob": ["./lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
